{
  "version": 2,
  "builds": [
    { "src": "dist/public/**/*", "use": "@vercel/static" },
    {
      "src": "/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ]
}
